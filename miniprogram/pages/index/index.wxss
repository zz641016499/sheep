.profile-header {
  width: 100%;
  /* justify-content: center; */
  align-items: center;
  flex-direction: column;
  height: 580rpx;
}

.profile-header .title {
  font-size: 42rpx;
  margin-top: 80rpx;
}

.profile-header .describe {
  margin-top: 20rpx;
  font-size: 32rpx;
  max-width: 680rpx;
}

.count {
  width: 1360rpx;
  height: 1rpx;
  background-color: #fff;
  margin-top: 20rpx;
  transform: scale(0.5);
}

.top-products {
  width: 680rpx;
  font-size: 22rpx;
}

.top-products .item {
  align-items: center;
  margin-top: 24rpx;
}

.top-products .item .left {
  display: flex;
  align-items: center;
}

.top-products .item image {
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.search-box{
  width: 100%;
  margin-top: -40rpx;
}

.search-bar-box .weui-search-bar{
  border-bottom: 0;
}