page {
  background-color: #f1f1f1;
}

.profile-header{
  justify-content: center;
  flex-direction: column;
  align-items: center;

}

.avatar-url {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
}

.nickname {
  font-size: 36rpx;
  margin-top: 30rpx;
  font-weight: 400;
}
.operation{
  margin-top: 50rpx;
  overflow: hidden;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: #fff;
  padding: 24rpx 0;
}

.operation .iconfont{
  color: #D66B9C;
  font-size: 40rpx;
  margin-bottom: 16rpx;
}
/* 导航 */
.nav {
  overflow: hidden;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: block;
}

.nav-item {
  padding-right: 90rpx;
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

.img {
  display: inline-block;
  margin-right: 10rpx;
  width: 1.6em;
  height: 1.6em;
  vertical-align: middle;
  max-width: 100%;
}

.text {
  color: #808080;
}

.content .iconfont {
  color: #D66B9C;
  font-weight: 600;
  margin-right: 30rpx;
}

.content .icon-arrow-right {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}
