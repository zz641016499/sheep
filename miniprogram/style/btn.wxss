.footer-bar {
  height: 100rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 1rpx;
  z-index: 100;
  box-sizing: border-box;
}

.footer-bar>view:nth-child(2) {
  width: 67%;
  margin: 10rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  padding: 16rpx;
  box-sizing: border-box;
}

.footer-bar .items-btn view {
  width: 100%;
}


/* 按钮样式 */

.items-btn {
  border-radius: 8rpx;
  text-align: center;
  color: #fff;
  padding: 8rpx 16rpx;
}

.items-btn-confirm {
  background: -webkit-linear-gradient(left,#F58F0A, #F46309);
}
.items-btn-confirm2{
  background-image: -webkit-linear-gradient(left, #FBCB4B 0%, #F5A826 100%);
}
.items-btn-disabledColor {
  color: #ccc;
}

/* 待发货 */

.items-btn-hair {
  border: 1rpx solid #cd733b;
  color: #cd733b;
  background: #fff;
}

/* 取消 、删除、查看物流 */

.items-btn-cancel {
  border: 1rpx solid #ccc;
  color: #ccc;
  background: #fff;
}

.items-btn-disabled {
  background: #ccc;
}

.items-btn-f2 {
  background: #f2f2f2;
}

/* 关闭按钮 */

.shut-down {
  position: relative;
  width: 36rpx;
  height: 36rpx;
}

.shut-down text {
  position: absolute;
  left: 50%;
  top: 50%;
  display: inline-block;
  width: 100%;
  height: 5rpx;
  background: rgba(151, 151, 151, 0.50);
  transform-origin: 50% 50%;
  -webkit-transform-origin: 50% 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  -webkit-transform: translate(-50%, -50%) rotate(45deg);
}

.shut-down text:nth-child(2) {
  transform: translate(-50%, -50%) rotate(-45deg);
  -webkit-transform: translate(-50%, -50%) rotate(-45deg);
}

.shut-down-left {
  float: left;
}

.shut-down-right {
  float: right;
}

/* 加减号 */

.jianjia {
  position: relative;
  width: 68rpx;
  height: 68rpx;
  box-shadow: 0 0 5rpx -1rpx #656565 inset;
  box-sizing: border-box;
}

.jianjia+input {
  height: 68rpx;
}

.jianjia text, .full-screen .full-screen-jianjia cover-view {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  display: inline-block;
  width: 60%;
  height: 5rpx;
  background: rgba(151, 151, 151, 0.50);
}

.jianjia .jianjia-add {
  background: #979797;
}

.jianjia text:nth-child(2),
.full-screen .full-screen-jianjia cover-view:nth-child(2) {
  transform: translate(-50%, -50%) rotate(90deg);
  -webkit-transform: translate(-50%, -50%) rotate(90deg);
}
